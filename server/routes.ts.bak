      const eggs = await storage.getUserEggs(userId);
      
      // Don't send password back
      const { password, ...userProfile } = user;
      
      res.status(200).json({
        ...userProfile,
        recentRaces,
        prompts,
        eggs
      });
    } catch (error) {
      console.error("Error fetching profile:", error);
      res.status(500).json({ message: "Failed to fetch profile" });
    }
